* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    color: white;
    background: 
        linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)),
        url("tlo.png") no-repeat center center fixed;
    background-size: cover;
}

/* --- Nawigacja --- */
header {
    background: rgba(0,0,0,0.7);
}

nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    max-width: 1200px;
    margin: auto;
}

.logo {
    font-size: 1.2rem;
    font-weight: bold;
}

.menu {
    display: flex;
    list-style: none;
}

.menu li {
    margin-left: 20px;
}

.menu a {
    color: white;
    text-decoration: none;
    font-weight: bold;
}

.menu a:hover {
    text-decoration: underline;
}

#menu-toggle {
    display: none;
    background: none;
    border: none;
    color: white;
    font-size: 1.5rem;
}

/* --- Sekcje --- */
.section {
    padding: 80px 20px;
    text-align: center;
}

#home h1 {
    font-size: 2.5rem;
}

.btn {
    display: inline-block;
    padding: 10px 20px;
    background: red;
    color: white;
    text-decoration: none;
    margin-top: 20px;
    border-radius: 5px;
}

.btn:hover {
    background: darkred;
}

/* --- Stopka --- */
footer {
    background: rgba(0,0,0,0.7);
    text-align: center;
    padding: 10px;
}

/* --- Responsywność --- */
@media (max-width: 768px) {
    .menu {
        display: none;
        flex-direction: column;
        background: rgba(0,0,0,0.9);
        position: absolute;
        top: 60px;
        right: 0;
        width: 200px;
        padding: 10px;
    }

    .menu li {
        margin: 10px 0;
    }

    #menu-toggle {
        display: block;
    }
}
